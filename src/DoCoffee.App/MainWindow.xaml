<Window x:Class="DoCoffee.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DoCoffee.App"
        mc:Ignorable="d"
        Title="Do Coffee Application" Height="400" Width="600"    
        Background="OrangeRed"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="33*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="33*" />
        </Grid.RowDefinitions>
        <Label x:Name="ApiKeyLabel" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="1" Content="ApiKey: DesignApiKey" Background="White" />
    </Grid>
</Window>
